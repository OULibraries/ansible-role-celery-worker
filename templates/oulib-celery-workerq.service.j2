[Unit]
Description=OULibraries oulib-celery/workerq Service

[Service]
WorkingDirectory={{ celery_workerq_dir }}
ExecStart={{ celery_workerq_dir }}/virtpy/bin/python {{ celery_workerq_dir }}/virtpy/bin/celery worker --queues {{ celery_workerq_queuename }} --hostname {{ celery_workerq_hostname }} --logfile {{ celery_workerq_log_dir }}/{{ celery_workerq_queuename }}.log --loglevel WARN
User={{ celery_workerq_user }}

[Install]
WantedBy=multi-user.target
Alias=oulib-celery-workerq.service
